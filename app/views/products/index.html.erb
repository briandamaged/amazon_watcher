<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>List price</th>
      <th>Current price</th>
      <th>Target Price</th>
      <th>Rating</th>
      <th>Reviews</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product.url %></td>
        <td><%= humanized_money_with_symbol product.list_price %></td>
        <td><%= humanized_money_with_symbol product.current_price %></td>
        <td><%= humanized_money_with_symbol product.target_price %></td>
        <td><%= product.rating %></td>
        <td><%= product.reviews %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

